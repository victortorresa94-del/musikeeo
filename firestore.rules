rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user owns the document (assuming doc ID is userID or field is userId)
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users Collection
    // Public read for basic info, private write
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId);
    }

    // Artists Collection
    // Public read, Owner write
    match /artists/{artistId} {
      allow read: if true;
      allow write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId); // Allow creation/update by owner
    }

    // Providers Collection
    match /providers/{providerId} {
      allow read: if true;
      allow write: if isOwner(resource.data.userId) || isOwner(request.resource.data.userId);
    }

    // Events Collection
    match /events/{eventId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // Only organizer can update/delete
      allow update, delete: if isOwner(resource.data.organizerId);
    }

    // Applications Collection
    match /applications/{applicationId} {
        // Anyone logged in can apply
        allow create: if isAuthenticated() && request.resource.data.applicantId == request.auth.uid;
        
        // Applicant can read their own applications
        allow read: if isOwner(resource.data.applicantId);
        
        // TODO: Allow Event Organizer to read applications for their events
        // This usually requires a "get" call which costs money/performance, 
        // so for now we ensure secure client-side filtering or use Cloud Functions for sensitive fetching.
        // For MVP, if we want Organizer to see, we might need to broaden this or rely on a "participants" subcollection.
    }
    

    // Chats Collection
    match /chats/{chatId} {
      // Allow create if authenticated and you are one of the participants
      allow create: if isAuthenticated() && request.resource.data.participants.hasAny([request.auth.uid]);
      // Allow read if you are a participant
      allow read: if isAuthenticated() && resource.data.participants.hasAny([request.auth.uid]);
      // Allow update if you are a participant (e.g. updating lastMessage)
      allow update: if isAuthenticated() && resource.data.participants.hasAny([request.auth.uid]);

      // Messages Subcollection
      match /messages/{messageId} {
        allow read: if isAuthenticated() && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]);
        allow create: if isAuthenticated() && get(/databases/$(database)/documents/chats/$(chatId)).data.participants.hasAny([request.auth.uid]) && request.resource.data.senderId == request.auth.uid;
      }
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
